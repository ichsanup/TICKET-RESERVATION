    <script>
        $(document).ready(function () {
            $("#header").click(function () {
                $.fn.fullpage.moveTo(1, 0);
            })
            $("#daftarDiskon").click(function () {
                $.fn.fullpage.moveTo(2, 0);
            })
            $("#kontak").click(function () {
                $.fn.fullpage.moveTo(3, 0);
            })
        })
        $(document).ready(function () {
            $('#fullpage').fullpage({
                anchors: ['scroll1', 'scroll2', 'scroll3'],
                navigation: true,
                navigationPosition: 'right',
                showActiveTooltip: false,
                slidesNavigation: true,
                slidesNavPosition: 'bottom',
                lazyLoading: true,
                loopBottom: false,
                fadingEffect: true,
                dragAndMove: true,
                afterRender: function () {
                    setInterval(function () {
                        $.fn.fullpage.moveSlideRight();
                    }, 1999000);
                },
                afterLoad: function (anchorLink, index) {
                    $('.preload').fadeIn(1000);
                    $('.hilang').fadeIn(1000);
                    if (index == 2) {
                        $(".hitungPercaya").show(); $(".dipercaya").fadeIn(400);
                        $(".tiket").fadeIn({ queue: false, duration: "slow" });
                        $(".form-harga").fadeIn({ queue: false, duration: "slow" });
                        $(".tiket").animate({ marginLeft: "350px", }, "slow");
                    } if (index == 4) {
                    }
                }, afterSlideLoad: function (anchorLink, index, slideAnchor, slideIndex) {
                    // alert("masuk"); $('.preload').fadeIn(600);
                }, onSlideLeave: function (anchorLink, index, slideIndex, direction, nextSlideIndex) {
                    $('.preload').hide();
                }
            });
        });
    </script>
